{
  "manifest_version": 2,
  "default_locale": "ja",
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "3.4.1",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "bookmarks",
    "unlimitedStorage",
    "contextMenus"
  ],
  "applications": {
    "gecko": {
      "id": "bookmark@hatena.ne.jp",
      "strict_min_version": "45.0"
    }
  },
  "icons": {
      "16": "images/favicon16.png",
      "32": "images/favicon32.png",
      "48": "images/favicon48.png",
      "128": "images/favicon128.png"
  },
  "browser_action": {
    "default_icon": "images/chrome-b-plus.png",
    "default_title": "Hatena Bookmark",
    "default_popup": "background/popup.html"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "all_frames": false,
      "js": [
        "content/login_check.js"
      ],
      "matches": [
        "http://www.hatena.ne.jp/login",
        "https://www.hatena.ne.jp/login",
        "http://www.hatena.ne.jp/login*",
        "https://www.hatena.ne.jp/login*"
      ]
    },
    {
      "run_at": "document_end",
      "all_frames": false,
      "js": [
        "content/logout.js"
      ],
      "matches": [
        "http://www.hatena.ne.jp/logout",
        "https://www.hatena.ne.jp/logout",
        "http://www.hatena.ne.jp/logout*",
        "https://www.hatena.ne.jp/logout*"
      ]
    },
    {
      "run_at": "document_end",
      "all_frames": false,
      "js": [
        "content/widget_embedder.js"
      ],
      "css": [
        "content/widget_embedder.css"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "options_ui": {
    "page": "background/config.html"
  },
  "background": {
    "page": "background/background.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "MacCtrl+Shift+B"
      }
    }
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
